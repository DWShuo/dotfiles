# CPU usage
[cpu_usage]
command=~/.config/i3blocks/cpu_usage/cpu_usage
interval=10
LABEL=CPU 
#min_width=CPU: 100.00%
T_WARN=50
T_CRIT=80
DECIMALS=2

# Temperature
[temperature]
command=~/.config/i3blocks/temperature/temperature
label=TEMP
interval=10
T_WARN=70
T_CRIT=90

# Memory usage
[memory]
command=~/.config/i3blocks/memory/memory
label=MEM
interval=15

# Disk usage
[disk]
command=~/.config/i3blocks/disk/disk
LABEL=HOME 
#DIR=$HOME
#ALERT_LOW=10
interval=300

# Weather
[weather]
command= curl wttr.in/?format="%c+%t+%w+%p+%m\n"
interval=2000
color=#A4C2F4

# Date Time
[time]
command=date '+%a %m-%d-%y %H:%M'
interval=5
